<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/decorators">
    <!-- Any urls that are excluded will never be decorated by Sitemesh -->
    <excludes>
        <pattern>/api/*</pattern>
    </excludes>

    <!-- apply Sitemesh default template -->
    <decorator name="employee" page="employee.jsp">
        <pattern>/employee*</pattern>
    </decorator>

    <decorator name="carpark" page="carpark.jsp">
        <pattern>/car-park*</pattern>
    </decorator>

<!--    <decorator name="web" page="index.jsp">-->
<!--        <pattern>/*</pattern>-->
<!--    </decorator>-->

    <decorator name="login" page="login.jsp">
        <pattern>/login</pattern>
    </decorator>
</decorators>